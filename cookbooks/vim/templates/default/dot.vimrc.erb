" Install ALL the plugins
execute pathogen#infect()

filetype plugin indent on

" Colorschemes
colorscheme desert

" Enable syntax highlighting
syntax on

" Enable line numbering
set nu

" Indentation
set smartindent
set expandtab
set tabstop=2
set shiftwidth=2

" Press ENTER in normal mode to insert a blank line below,
" shift + ENTER for above
map <S-Enter> O<Esc>
map <CR> o<Esc>

highlight clear SignColumn

" Set up a 80 character column at the right, no line breaks here but
" this provides a nice indicator as to where we should stop
if exists('+colorcolumn')
  set colorcolumn=80
endif

" File type specific settings
augroup filetypedetect 
  au! BufRead,BufNewFile *nc setfiletype nc 
  au! BufRead,BufNewFile *pig setfiletype pig
augroup END

" Changing the default column size of NERDtree
let g:NERDTreeWinSize = 40 

" Numbers toggling
nnoremap <F3> :NumbersToggle<CR>
nnoremap <F4> :NumbersOnOff<CR>

" Useful functionality
" --------------------------------------

" Allows us to sudo write a file without having to reopen it again
cnoremap sudow w !sudo tee % >/dev/null

